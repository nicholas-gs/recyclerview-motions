<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/email_item_container"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/colorStandardWhite"
    android:paddingHorizontal="8dp"
    android:transitionGroup="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/emailitem_imageview"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="1dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/emailitem_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@id/emailitem_imageview"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="0dp">

        <TextView
            android:id="@+id/emailitem_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="0dp"
            android:singleLine="true"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorFrom"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/emailitem_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisci... "
            android:textColor="@color/colorSubject"
            android:textSize="13sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/emailitem_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing"
            android:textColor="@color/colorMessage"
            android:textSize="13sp"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/emailitem_timeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:text="19 Dec"
        android:textColor="@color/colorMessage"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/emailitem_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailitem_timeStamp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_star_border_grey_24dp" />

</RelativeLayout>